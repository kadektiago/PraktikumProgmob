<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/mantap"/>

    <EditText
        android:id="@+id/etUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Username"
        android:textSize="15dp"
        android:layout_below="@id/logo"/>

    <EditText
        android:id="@+id/etPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etUsernameRegister"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/sandi"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/etNamaRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/nama"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Name"
        android:textSize="15dp"
        android:layout_below="@id/etPasswordRegister"/>

    <EditText
        android:id="@+id/etTeleponRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/call"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="15dp"
        android:layout_below="@id/etNamaRegister"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="341dp"
        android:layout_height="41dp"
        android:layout_below="@+id/etTeleponRegister"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tombol"
        android:text="SIGN UP"
        android:textColor="#ffff"
        android:textStyle="bold"/>

</RelativeLayout>