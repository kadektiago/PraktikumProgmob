<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.profile.ProfileEdit">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/mantap"/>

    <EditText
        android:id="@+id/etUsernameEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/logo"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Username"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/etNamaEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/kotaktulisan"
        android:layout_below="@id/etUsernameEdit"
        android:drawableLeft="@drawable/nama"
        android:drawablePadding="10dp"
        android:hint="Nama"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/etTeleponEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/call"
        android:layout_below="@id/etNamaEdit"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnEditPassword"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/tombol"
        android:drawableTint="#FFFFFF"
        android:text="Change Password"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_below="@id/etTeleponEdit"/>

    <Button
        android:id="@+id/btnSaveProfil"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/btnEditPassword"
        android:layout_alignBaseline="@id/btnEditPassword"
        android:layout_alignParentBottom="false"
        android:background="@drawable/tombol"
        android:drawableTint="#FFFFFF"
        android:text="Save Profile"
        android:textColor="#ffff"
        android:textStyle="bold" />

</RelativeLayout>